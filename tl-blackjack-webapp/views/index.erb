<div class="jumbotron text-center">
  <h1>Welcome to</h1>
  <h1><span id="blackjack">Blackjack!</span></h1>
  <div class="buffer"></div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form action="/start" method="post">
        <div class="form-group">
          <label for="player_name">Please, introduce yourself:</label>
          <input type="text" class="form-control" name="player_name" id="player_name" placeholder="Enter your name here">
        </div>
         <div class="form-group">
          <label for="bankroll">How much money do you have for the game today?</label>
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <input type="text" class="form-control" name="bankroll" id="bankroll" value="1000">
            <div class="input-group-addon">.00</div>
          </div>
        </div>
        <button type="submit" class="btn btn-success btn-lg">Start playing</button>
      </form>
    </div>
  </div>
</div>